{% extends 'adminBase.htm.twig' %}
{% block title %}Step 1 Users{% endblock %}

{% block body %}
    <div id="content" class="app-content box-shadow-z0" role="main">

        <div ui-view class="app-body" id="view">

            <!-- ############ PAGE START-->
            {{ include(':admin/partials:top.htm.twig') }}
            <div class="padding">
                <div class="box">
                    <div class="box-header">
                        <h2>Registered Users</h2>
                    </div>
                    <div class="table-responsive">
                        <table id="data" class="table table-striped b-t b-b">
                            <thead>
                            <tr>
                                <th  style="width:20%">Names</th>
                                <th  style="width:25%">Stage Name</th>
                                <th  style="width:25%">ID Number</th>
                                <th  style="width:15%">Email</th>
                                <th  style="width:15%">Created At</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users  %}
                            <tr>
                            <td>{{ user.fullName }}</td>
                            <td>{{ user.stageName }}</td>
                            <td>{{ user.idNumber }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.createdAt | date("F jS \\a\\t g:ia") }}</td>
                            </tr>
                            {% endfor  %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- ############ PAGE END-->

        </div>
    </div>
{% endblock %}